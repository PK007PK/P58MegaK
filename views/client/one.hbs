<h2>{{client.name}}</h2>
<table>
    <tbody>
        <tr>
            <th>
                Email:
            </th>
            <td>
              <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
            </td>
        </tr>
        <tr>
            <th>
               Imię:
            </th>
            <td>
                {{client.name}}
            </td>
        </tr>
        <tr>
            <th>
               Następny kontakt:
            </th>
            <td>
                {{client.nextContactAt}}
            </td>
        </tr>
        {{#if client.notes}}
            <tr>
                <th>
                Notatki:
                </th>
                <td>
                    {{client.notes}}
                </td>
            </tr>
        {{/if}}
    </tbody>
</table>